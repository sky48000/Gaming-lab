body {
    font-family: 'Arial', sans-serif;
    text-align: center;
    margin: 0;
    padding: 0;
    background: url('https://source.unsplash.com/1600x900/?gaming') no-repeat center center fixed;
    background-size: cover;
    color: #fff;
    animation: fadeIn 2s ease-in-out;
}

h1 {
    font-size: 2.5em;
    text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.7);
    margin-top: 20px;
}

p {
    font-size: 1.2em;
    margin-bottom: 20px;
}

.game-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.game {
    width: 200px;
    margin: 15px;
    padding: 15px;
    background: rgba(0, 0, 0, 0.7);
    border-radius: 10px;
    box-shadow: 0px 0px 15px rgba(255, 255, 255, 0.3);
    transition: transform 0.3s ease-in-out;
}

.game:hover {
    transform: scale(1.1);
}

.game h3 {
    color: #4CAF50;
}

.game a {
    display: block;
    margin-top: 10px;
    color: #ffcc00;
    font-size: 1.2em;
    text-decoration: none;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}